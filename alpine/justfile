tag     := "3.20"
version := tag + ".3"
arch    := "aarch64"
target  := `pwd` / "build/"
binary  := `pwd` / ".." / "target" / "alpine-image-builder"
scripts := `pwd` / "scripts"

default: build

[no-cd]
build:
    {{binary}} --config builder.toml --arch {{arch}} --version {{version}} --output {{target}} --scripts "{{scripts}}"

clean:
    rm -rf "{{target}}"
