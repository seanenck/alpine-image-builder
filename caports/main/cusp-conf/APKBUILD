# Maintainer: Sean Enck <sean@ttypty.com>
pkgname=cusp-conf
pkgver=0.1
pkgrel=5
pkgdesc="cusp configuration templates and scripts"
url="https://www.cusplinux.org"
arch="noarch"
license="MIT"
options="!check" # No testsuite
source="
gen-cusp-fstab
lbu.list
setup-cusp-disks
setup-cusp-reconfigure
world
99.overlay.sh
apk-wrapper
setup-system-overlay
"

package() {
  mkdir -p "$pkgdir"/usr/sbin "$pkgdir"/usr/share/"$pkgname"/ "$pkgdir"/etc/profile.d "$pkgdir/usr/lib/cusp-apk/bin"
  install -Dm644 world "$pkgdir/usr/share/$pkgname/world"
  install -Dm644 lbu.list "$pkgdir/usr/share/$pkgname/lbu.list"
  install -Dm644 99.overlay.sh "$pkgdir/etc/profile.d/99.overlay.sh"
  for f in "gen-cusp-fstab" "setup-cusp-disks" "setup-cusp-reconfigure" "setup-system-overlay"; do
    install -Dm755 "$f" "$pkgdir/usr/sbin/$f"
  done
  install -Dm755 apk-wrapper "$pkgdir/usr/lib/cusp-apk/bin/apk"
}

