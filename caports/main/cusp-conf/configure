#!/bin/sh -e
LBUCONF="/etc/lbu/lbu.conf"
FSTABCONF="/etc/cusp/fstab.conf"
LIB="/usr/share/cusp/lib.sh"
MEDIA="/media"

for FILE in *.in; do
  RES="$(basename "$FILE" | sed 's#\.in$##g')"
  cp "$FILE" "$RES"
  for REPLACE in \
    "LBUCONF:$LBUCONF" \
    "FSTABCONF:$FSTABCONF" \
    "LIB:$LIB" \
    "MEDIA:$MEDIA"; do
    PLACEHOLDER="$(echo "$REPLACE" | cut -d ":" -f 1)"
    PLACEHOLDER="@${PLACEHOLDER}@"
    VALUE="$(echo "$REPLACE" | cut -d ":" -f 2-)"
    sed -i "s#$PLACEHOLDER#$VALUE#g" "$RES"
  done
done
